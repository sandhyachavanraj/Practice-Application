<%= "Reply Email" %><br/><br/>
<%= simple_form_for @email, url: send_reply_admin_email_path(@email) do |reply| %>
  <%= reply.input :receiver_id, label: "To", input_html: { value: User.find(@email.receiver_id).email } %><br/><br/>
  <%= reply.input :subject, input_html: { value: "Re: " + reply.object.subject } %><br/><br/>
  <%= reply.input :body %>
  
  <%= reply.submit :Send, class: "btn btn-primary"   %>
<% end %>
  
<%= link_to "Back", admin_emails_path, class: "btn btn-primary" %>