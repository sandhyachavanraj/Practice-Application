<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |user| %>
  <%= user.error_notification %>
  <%#= raise 'sandhya'.inspect %>
  <div class="form-inputs">
    <%= user.input :email, :required => true, :autofocus => true %>
    <%= user.input :password, :required => true %>
    <%= user.input :password_confirmation, :required => true %> 
    <%#= f.input :type, :collection => [['User']] %>
    <%= user.simple_fields_for :user_profile do |profile| %>
      <%= profile.input :user_name %>
      <%= profile.input :address %>
      <%= profile.input :mobile_number %>
      <%= profile.input :company %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= user.button :submit, "Sign up", :class => "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
